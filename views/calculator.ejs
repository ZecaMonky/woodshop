<%- include('partials/header', { title: 'Калькулятор' }) %>

<div class="max-w-7xl mx-auto py-10 px-4">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Калькулятор стоимости древесины</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="bg-white rounded-2xl shadow-lg p-6">
            <form id="calculatorForm" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Тип древесины</label>
                    <select name="woodType" id="woodType" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <% categories.forEach(category => { %>
                            <option value="<%= category.slug %>"><%= category.name %></option>
                        <% }); %>
                    </select>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Размеры (м)</label>
                    <div class="grid grid-cols-3 gap-4">
                        <div>
                            <input type="number" name="length" placeholder="Длина" min="0.1" step="0.1" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        <div>
                            <input type="number" name="width" placeholder="Ширина" min="0.1" step="0.1" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        </div>
                        <div>
                            <input type="number" name="height" placeholder="Высота" min="0.1" step="0.1" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        </div>
                    </div>
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Количество (шт.)</label>
                    <input type="number" name="quantity" min="1" value="1" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Дополнительные опции</label>
                    <div class="space-y-2">
                        <label class="flex items-center gap-2">
                            <input type="checkbox" name="polishing" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                            <span>Шлифовка</span>
                        </label>
                        <label class="flex items-center gap-2">
                            <input type="checkbox" name="treatment" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                            <span>Антисептическая обработка</span>
                        </label>
                    </div>
                </div>
                
                <button type="submit" class="w-full bg-gray-900 text-white py-3 rounded-full font-semibold hover:bg-gray-800 transition">
                    Рассчитать стоимость
                </button>
            </form>
        </div>
        
        <div class="bg-white rounded-2xl shadow-lg p-6">
            <h2 class="text-xl font-bold text-gray-900 mb-4">Результат расчета</h2>
            <div id="calculationResult" class="space-y-4">
                <div class="text-center py-12 text-gray-500">
                    Введите параметры для расчета
                </div>
            </div>
        </div>
    </div>
</div>

<script>
const woodTypeSelect = document.getElementById('woodType');
const woodPrices = {};
<% categories.forEach(category => { %>
woodPrices['<%= category.slug %>'] = 1000; // Можно заменить на category.price, если нужно
<% }); %>

const additionalCosts = {
    polishing: 200,
    treatment: 300
};

document.getElementById('calculatorForm').addEventListener('submit', (e) => {
    e.preventDefault();
    
    const formData = new FormData(e.target);
    const woodType = formData.get('woodType');
    const length = parseFloat(formData.get('length')) || 0;
    const width = parseFloat(formData.get('width')) || 0;
    const height = parseFloat(formData.get('height')) || 0;
    const quantity = parseInt(formData.get('quantity')) || 1;
    const polishing = formData.get('polishing') === 'on';
    const treatment = formData.get('treatment') === 'on';
    
    // Расчет объема в кубометрах
    const volume = length * width * height;
    
    // Базовая стоимость
    let totalCost = volume * woodPrices[woodType];
    
    // Дополнительные услуги
    if (polishing) totalCost += volume * additionalCosts.polishing;
    if (treatment) totalCost += volume * additionalCosts.treatment;
    
    // Умножаем на количество
    totalCost *= quantity;
    
    // Форматируем результат
    const result = `
        <div class="space-y-4">
            <div class="flex justify-between text-gray-600">
                <span>Объем:</span>
                <span>${volume.toFixed(2)} м³</span>
            </div>
            <div class="flex justify-between text-gray-600">
                <span>Базовая стоимость:</span>
                <span>${(volume * woodPrices[woodType]).toFixed(2)} руб.</span>
            </div>
            ${polishing ? `
            <div class="flex justify-between text-gray-600">
                <span>Шлифовка:</span>
                <span>${(volume * additionalCosts.polishing).toFixed(2)} руб.</span>
            </div>
            ` : ''}
            ${treatment ? `
            <div class="flex justify-between text-gray-600">
                <span>Антисептическая обработка:</span>
                <span>${(volume * additionalCosts.treatment).toFixed(2)} руб.</span>
            </div>
            ` : ''}
            <div class="border-t border-gray-200 pt-4">
                <div class="flex justify-between text-lg font-bold">
                    <span>Итого:</span>
                    <span>${totalCost.toFixed(2)} руб.</span>
                </div>
            </div>
            <button class="w-full mt-4 bg-gray-900 text-white py-3 rounded-full font-semibold hover:bg-gray-800 transition" onclick="addToCart()">
                Добавить в корзину
            </button>
        </div>
    `;
    
    document.getElementById('calculationResult').innerHTML = result;
});

function addToCart() {
    showToast('Функция добавления в корзину будет доступна в ближайшее время', 'info');
}
</script>

<%- include('partials/footer') %> 