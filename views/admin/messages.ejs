<%- include('../partials/header', { title: 'Управление сообщениями' }) %>
<%- include('./partials/nav', { path: '/admin/messages' }) %>

<div class="max-w-7xl mx-auto py-10 px-2 md:px-4">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900">Управление сообщениями</h1>
    </div>

    <div class="bg-white rounded-xl shadow overflow-x-auto">
        <table class="w-full text-sm min-w-[600px]">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-2 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                    <th class="px-2 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Отправитель</th>
                    <th class="px-2 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                    <th class="px-2 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Телефон</th>
                    <th class="px-2 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Статус</th>
                    <th class="px-2 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Дата</th>
                    <th class="px-2 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Действия</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% messages.forEach(message => { %>
                    <tr>
                        <td class="px-2 md:px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            #<%= message.id %>
                        </td>
                        <td class="px-2 md:px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            <%= message.name %>
                        </td>
                        <td class="px-2 md:px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= message.email %>
                        </td>
                        <td class="px-2 md:px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= message.phone || '-' %>
                        </td>
                        <td class="px-2 md:px-6 py-4 whitespace-nowrap">
                            <select class="status-select text-sm rounded-full px-3 py-1 font-medium
                                <%= message.status === 'new' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>"
                                data-message-id="<%= message.id %>">
                                <option value="new" <%= message.status === 'new' ? 'selected' : '' %>>Новое</option>
                                <option value="processed" <%= message.status === 'processed' ? 'selected' : '' %>>Обработано</option>
                            </select>
                        </td>
                        <td class="px-2 md:px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <%= new Date(message.created_at).toLocaleDateString() %>
                        </td>
                        <td class="px-2 md:px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <a href="/admin/messages/<%= message.id %>" class="text-blue-600 hover:text-blue-900">
                                Подробнее
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<script>
document.querySelectorAll('.status-select').forEach(select => {
    select.addEventListener('change', async (e) => {
        const messageId = e.target.dataset.messageId;
        const status = e.target.value;
        try {
            const response = await fetch(`/admin/messages/${messageId}/status`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ status })
            });
            if (response.ok) {
                select.className = `status-select text-sm rounded-full px-3 py-1 font-medium ${
                    status === 'new' ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800'
                }`;
                showToast('Статус сообщения обновлён', 'success');
            } else {
                throw new Error('Ошибка при обновлении статуса');
            }
        } catch (error) {
            console.error('Ошибка:', error);
            showToast('Произошла ошибка при обновлении статуса сообщения', 'error');
        }
    });
});
</script>

<%- include('../partials/footer') %>